run = "node server.js"
modules = ["nodejs-20", "postgresql-16"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 36785
externalPort = 3000

[[ports]]
localPort = 42625
externalPort = 3001

[agent]
expertMode = true
integrations = ["replitmail:1.0.0"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow]]
name = "Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node server.js"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[nix]
channel = "stable-23_05"

[deployment]
deploymentTarget = "autoscale"
run = ["node", "server.js"]
build = ["npm", "install"]
